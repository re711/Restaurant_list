<!-- ./views/index.handlebars -->

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名字" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <div class="card-columns">
                {{#each restaurants}}
                <a href="./restaurant/{{this._id}}" class="text-secondary">
                    <div class="card mb-3">
                        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                          <div class="card-body">
                            <h6 class="card-title">{{this.name}}</h6>
                            <p class="card-text">
                                <i class="far fa-bookmark"></i>
                                {{this.category}}
                            </p>
                            <span class="font-weight-bold badge badge-danger">
                                <i class="far fa-gem"></i>
                                {{this.rating}}                             
                            </span>

                            <a href="./restaurant/{{this._id}}/edit">
                              <button type="button">
                                <i class="fas fa-edit"></i>
                              </button>
                            </a>
                            <form action="./restaurant/{{this._id}}/delete" method="POST" style="display: inline;" onsubmit="return deleteCheck()">                              
                              <button type="submit">
                                <i class="fas fa-trash-alt"></i>
                              </button>
                            </form>
                          </div>
                      </div>
                {{/each}}
            </div>    
        </div>
    </div>
</div>
